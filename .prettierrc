{
    "printWidth": 100,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "tabs": false,
    "tabWidth": 4,
    "tailwindConfig": "tailwind.config.js",
    "plugins": ["prettier-plugin-blade", "prettier-plugin-tailwindcss"],
    "bracketSameLine": true,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": [".env", ".env.example"],
            "options": {
                "parser": "env"
            }
        },
        {
            "files": ["*.blade.php"],
            "options": {
                "phpVersion": "8.3",
                "parser": "blade",
                "tabWidth": 2,
                "printWidth": 100,
                "sortTailwindcssClasses": true
            }
        }
    ]
}
